---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import Footer from '../components/Footer.astro'
import { SITE } from '../config';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let { title } = SITE;
let description = 'Specializing in high growth disruptive technologies';
let permalink = 'https://example.com/'; // ADD URL HERE


// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.glob('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

---
<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body>
		<BlogHeader />
			<main class="content">
					<div class="main-heading">
						<h1 class="main-heading__title">THE DECENTRALAWYER</h1>
						<p class="main-heading__bio">{description}</p>
					</div>

					<figure class="figure">
						<div class="popup-content">
						  <!-- svg integration -->
							<svg
							class="svg"
							viewBox="0 0 1340 1200"
							preserveAspectRatio="xMinYMin meet"
						  >
							<image class="svg__img"
							  xlink:href="/assets/DecentralawyerOfficeMain_smaller.png"
							/>
				  
							<g class="svg__hover-group">
							  <polygon
								class="skills-room"
								points="200, 275 745, 0 1340, 295 1340, 450 948, 647"
							  />
							</g>
							<g class="svg__hover-group">
							  <polygon
								class="bio-room"
								points="320, 840 320, 685 672, 511 1010, 678 1010, 830 660, 1005"
							  />
							</g>
							<g class="svg__hover-group">
							  <polygon
								class="contact-room"
								points="320, 840 320, 685 672, 510 380, 365 0, 550 0, 680  "
							  />
							</g>
						  </svg>
						<!-- svg integration end -->
							<div class="skills-room__container-right">
								<div class="skills-room__popup-right">
									<h1 class="skills-room__popup-title">Skills</h1>
									<p class="skills-room__popup-text">
										Welcome to TechLaw Firm, where we specialize in providing legal services to cutting edge technology companies. Our team has a deep understanding of the complex legal issues surrounding the latest advancements in the tech industry.
									</p>
								</div>
							</div>
							<div class="skills-room__container-left">
								<div class="skills-room__popup-left">
									<p class="skills-room__popup-text">
										From patent law to data privacy regulations, we have the expertise to protect your business and help you navigate the constantly evolving legal landscape.
									</p>
								</div>
							</div>

								<div class="bio-room__container-right">
									<div class="bio-room__popup-right">
										<p class="bio-room__popup-text">
											Whether you're a startup or a well-established company, we have the knowledge and resources to help you succeed. Contact us today to schedule a consultation and learn how we can help your business thrive.
										</p>
										<h1 class="bio-room__popup-header">Bio</h1>
									</div>
								</div>
								<div class="bio-room__container-left">
									<div class="bio-room__popup-left">
										<p class="bio-room__popup-text">
											Meet John Doe, a partner at TechLaw Firm. John has over a decade of experience in the tech industry and is a leading expert in patent law. He has successfully represented clients in a wide range of technology fields.
										</p>
									</div>
								</div>
								<div class="contact-room__popup">
									<h1 class="contact-room__popup-header">Contact</h1>
									<a class="contact-room__popup-text" href="mailto: gaurav@decentralaw.ai">Email Me!</a> <br>
									<a class="contact-room__popup-text" href="https://calendly.com/decentralawyer">Book an appointment</a>
								</div>

							</div>
						</figure>


					  <div class="testimonials">
						<h1>Testimonials</h1>
						<Footer />
					</div>
					</main>

		<script>
			// defines html elements as variables
			var mainRoom = document.querySelector(".skills-room");
			var mainRoomPopup = document.querySelectorAll(".skills-room__popup-right, .skills-room__popup-left");
			
			// pink-room variable definitions
			var pinkRoom = document.querySelector(".contact-room");
			var pinkRoomPopup = document.querySelector(".contact-room__popup")

			var blueRoom = document.querySelector(".bio-room");
			var blueRoomPopup = document.querySelectorAll(".bio-room__popup-right, .bio-room__popup-left")

			let clickedRoom = null;

			// selects the elements and listens for hover motions
			function addPopupListeners(room, popup) {
				room.addEventListener("mouseover", function() {
					showPopup(room, popup);
				});
				room.addEventListener("click", function () {
					showPopup(room, popup);
					room.classList.toggle("clicked")
				});
				room.addEventListener("mouseout", function() {
					if (!room.classList.contains("clicked")) {
						hidePopup(popup);
					}
				});
			}

			addPopupListeners(mainRoom, mainRoomPopup);
			addPopupListeners(pinkRoom, pinkRoomPopup);
			addPopupListeners(blueRoom, blueRoomPopup);
						
			// function to show the popup
			function showPopup(room, popup) {
				var iconPos = room.getBoundingClientRect();
				if (popup instanceof NodeList) {
					for (let i = 0; i < popup.length; i++) {
						var popupElem = popup[i];
						popupElem.style.display = "block";
					}
				} else {
					popup.style.display = "block";
				}
			}

				function hidePopup(popup) {
					if (popup instanceof NodeList) {
						for (let i = 0; i < popup.length; i++) {
							popup[i].style.display = "none";
						}
					} else {
    					popup.style.display = "none";
					}
				}
		</script>
	</body>
</html>
