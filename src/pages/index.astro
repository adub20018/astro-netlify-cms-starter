---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import { SITE } from '../config';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let { title } = SITE;
let description = 'Specializing in high growth disruptive technologies';
let permalink = 'https://example.com/'; // ADD URL HERE

// Data Fetching: List all Markdown posts in the repo.

let allPosts = await Astro.glob('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
	<head>
		<BaseHead {title} {description} {permalink} />

		<style>
			.content {
				padding-top: 6rem;
				display: flex;
				flex-direction: row;
				justify-content: flex-start;
				align-items: center;
				height: 60vh;
			}

			.main-heading {
				letter-spacing: 6px;
				font-size: 3rem;
				font-weight: 700;
				margin-bottom: 3rem;
			}

			
			.main-bio {
				font-size: 1.25rem;
				margin-bottom: 2rem;
			}

			.DCL_office {
				padding-top: 5rem;
				height: 40rem;
			}

			.container-center {
				display: flex;
				justify-content: center;
				padding-top: 2rem;
			}

			.btn {
				border-radius: 5px;
				padding: 15px 25px;
				font-size: 1em;
				color: var(--color-text-gradient);
				box-shadow: 0 0 6px 0 rgba(157, 96, 212, 0.5);
				border: solid 2px transparent;
				background-image: var(--color-text-gradient);
				background-origin: border-box;
				box-shadow: 2px 1000px 1px rgba(47, 43, 75, 1) inset;
			}

			.btn:hover {
				position: relative;
				transition: ease 0.5s;
				border: 2px solid rgba(47, 43, 75, 1);
				background: var(--color-text-gradient);
				box-shadow: none ;
				color: black;
			} 
		</style>
	</head>

	<body>
		<BlogHeader />
		<div class="wrapper">
			<main class="content">
					<div>
						<h1 class="main-heading">{title}</h1>
						<p class="main-bio">{description}</p>
						<div class="container-center">
							<button class="btn">Book a Consultation</button>
						</div>
					</div>
				<img class="DCL_office" src="/public/assets/decentralawyer_office.png" alt="decentralawyer office"/>
			</main>
		</div>
	</body>
</html>
